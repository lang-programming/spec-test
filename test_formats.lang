	fn.testAssertStrictEquals(func.format(%-4t, abc), {{{test}}})
	fn.testAssertStrictEquals(func.format(%-2t, def), {{{20}}})
	fn.testAssertStrictEquals(func.format(%-4t, 10), {{{txt2}}})
