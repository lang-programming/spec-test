# Tests
{
	fn.testSubUnit(System functions [func.sleep])
	
	$t1 = func.currentTimeMillis()
	func.sleep(5)
	$t2 = func.currentTimeMillis()
	$td $= $t2 - $t1
	
	fn.testAssertGreaterThanOrEquals($td, 5)
	fn.testAssertLessThan($td, 8)
}
