func.langTestUnit(Variables)
{
	func.langTestSubUnit(Variable creation [Undefined])
	
	func.langTestAssertStrictEquals($undefined, {{{$undefined}}})
}
{
	func.langTestSubUnit(Variable creation [Empty])
	
	$new
	func.langTestAssertNull($new)
	
	$empty =
	func.langTestAssertNull($empty)
}
{
	func.langTestSubUnit(Variable creation [Not empty])
	
	$num = 42
	func.langTestAssertStrictEquals($num, 42)
	
	$emptyText = \e
	func.langTestAssertStrictEquals($emptyText, \e)
}
{
	func.langTestSubUnit(Variable creation [Valid variable name])
	
	$var = 0
	func.langTestAssertStrictEquals($var, 0)
	
	$var_test = 1
	func.langTestAssertStrictEquals($var_test, 1)
	
	$varTest = 2
	func.langTestAssertStrictEquals($varTest, 2)
	
