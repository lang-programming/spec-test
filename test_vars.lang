	$.. = 1
	func.langTestAssertStrictNotEquals($.., 1)
	
	$... = 2
	func.langTestAssertStrictNotEquals($..., 2)
	
	$- = 3
	func.langTestAssertStrictNotEquals($-, 3)
	
	$-- = 4
	func.langTestAssertStrictNotEquals($--, 4)
	
	$--- = 5
	func.langTestAssertStrictNotEquals($---, 5)
	
	$+ = 6
	func.langTestAssertStrictNotEquals($+, 6)
	
	$/ = 7
	func.langTestAssertStrictNotEquals($/, 7)
	
	$& = 8
	func.langTestAssertStrictNotEquals($&, 8)
	
	$µ = 9
	func.langTestAssertStrictNotEquals($µ, 9)
	
	$• = 10
	func.langTestAssertStrictNotEquals($•, 10)
}
{
	func.langTestSubUnit(Variable creation [Invalid variable name, varPtr redirection])
	lang.errorOutput = 0
	
	$[[var] = 0
	func.langTestAssertStrictNotEquals($[[var], 0)
	
	$[var]] = 1
	func.langTestAssertStrictNotEquals($[var]], 1)
	
	$[] = 2
	func.langTestAssertStrictNotEquals($[], 2)
	
	$[var = 3
	func.langTestAssertStrictNotEquals($[var, 3)
	
	$var] = 4
	func.langTestAssertStrictNotEquals($var], 4)
	
	$[var]] = 5
	func.langTestAssertStrictNotEquals($[var]], 5)
	
	$[[] = 6
	func.langTestAssertStrictNotEquals($[[], 6)
	
	$[]] = 7
	func.langTestAssertStrictNotEquals($[]], 7)
	
	$[LANG_] = 8
	func.langTestAssertStrictNotEquals($[LANG_], 8)
	
