	func.langTestAssertStrictEquals($VAR___TEST, 4)
	
	$VARTEST = 5
	func.langTestAssertStrictEquals($VARTEST, 5)
	
	$_VARTEST = 6
	func.langTestAssertStrictEquals($_VARTEST, 6)
	
	$VARTEST_ = 7
	func.langTestAssertStrictEquals($VARTEST_, 7)
	
	$_VARTEST_ = 8
	func.langTestAssertStrictEquals($_VARTEST_, 8)
	
	$var1 = 9
	func.langTestAssertStrictEquals($var1, 9)
	
	$1var = 10
	func.langTestAssertStrictEquals($1var, 10)
	
	$1var1 = 11
	func.langTestAssertStrictEquals($1var1, 11)
	
	$9var0 = 12
	func.langTestAssertStrictEquals($9var0, 12)
	
	$0 = 13
	func.langTestAssertStrictEquals($0, 13)
	
	$19 = 14
	func.langTestAssertStrictEquals($19, 14)
	
	$_ = 15
	func.langTestAssertStrictEquals($_, 15)
	
	$__ = 16
	func.langTestAssertStrictEquals($__, 16)
	
	$___ = 17
	func.langTestAssertStrictEquals($___, 17)
	
	$_0_ = 18
	func.langTestAssertStrictEquals($_0_, 18)
	
	$0_0 = 19
	func.langTestAssertStrictEquals($0_0, 19)
	
