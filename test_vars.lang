}
{
	func.langTestSubUnit(Variable creation [Invalid variable name, \$LANG_VARs])
	lang.errorOutput = 0
	
	$LANG_ = 0
	func.langTestAssertStrictNotEquals($LANG_, 0)
	
	$LANG_ERROR = 1
	func.langTestAssertStrictNotEquals($LANG_ERROR, 1)
	
	$LANG____ = 2
	func.langTestAssertStrictNotEquals($LANG____, 2)
	
	lang.errorOutput = 1
}
{
	func.langTestSubUnit(Variable setting)
	
	$var1 = test
	func.langTestAssertStrictEquals($var1, test)
	
	$var1 = 42
	func.langTestAssertStrictEquals($var1, 42)
	
	$var1 = func.toLong(42)
	func.langTestAssertStrictEquals($var1, func.toLong(42))
	
	$var1 = null
	func.langTestAssertNull($var1)
	
	$var1 = func.arrayOf(1, 2, 3)
	func.langTestAssertStrictEquals($var1, func.arrayOf(1, 2, 3))
	
	$var1
	func.langTestAssertNull($var1)
	
	$var1 = TESTING-42
	func.langTestAssertStrictEquals($var1, TESTING-42)
	
	$var1 = $var1
	func.langTestAssertStrictEquals($var1, TESTING-42)
}
{
	func.langTestSubUnit(Variable copying)
	
	$var1 = test
	$var2 = 123
	
	$var3 = $var1
	$var4 = $var2
	func.langTestAssertStrictEquals($var3, test)
	func.langTestAssertStrictEquals($var3, $var1)
	func.langTestAssertStrictEquals($var4, 123)
	func.langTestAssertStrictEquals($var4, $var2)
	
	$var3 = 42
	$var4 = DEF
	func.langTestAssertStrictNotEquals($var3, $var1)
	func.langTestAssertStrictNotEquals($var1, 42)
	func.langTestAssertStrictNotEquals($var4, $var2)
	func.langTestAssertStrictNotEquals($var2, DEF)
}
